<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen.HomePageActivity">

    <View
        android:id="@+id/middle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/Brainy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/middle"
        android:layout_centerHorizontal="true"
        android:text="Detect  Brain cancer"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/Aptos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/Brainy"
        android:layout_centerHorizontal="true"
        android:text="Detect Eye Blindness"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/chest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/middle"
        android:layout_centerHorizontal="true"
        android:text="Detect Lung Cancer"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/skin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chest"
        android:layout_centerHorizontal="true"
        android:text="Detect Lung Cancer"
        android:layout_marginTop="12dp"/>

</RelativeLayout>